<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../css/setting.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.component.SettingController">

   <VBox alignment="CENTER" prefHeight="550" prefWidth="700" spacing="15" styleClass="background-pane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <!-- Title -->
      <Label styleClass="title-label" text="⚙️ Settings" />

      <!-- Theme Selection -->
      <HBox spacing="15" styleClass="setting-box">
         <Label styleClass="setting-label" text="🎨 Theme Mode:" />
         <ComboBox fx:id="themeSelector" promptText="Select Theme" />
      </HBox>

      <!-- Notification Toggle -->
      <HBox spacing="15" styleClass="setting-box">
         <Label styleClass="setting-label" text="🔔 Notifications:" />
         <CheckBox fx:id="notificationToggle" />
      </HBox>

      <!-- Account Management -->
      <VBox spacing="12" styleClass="account-box">
         <Label styleClass="account-label" text="👤 Account Settings" />
         <Button fx:id="changePasswordBtn" text="🔑 Change Password" />
         <Button fx:id="logoutBtn" text="🚪 Logout" />
      </VBox>
   </VBox>
</AnchorPane>
